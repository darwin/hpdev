<%
  skins_path = File.expand_path(File.join(ENV["PBDEV_WORKSPACE"], "skins", params[:author]))
%>
<h2>Skins by <%= params[:author] %></h2>
<h3>I see following skins on the disk:</h3>
<p class="note">root path is <code><%= skins_path %></code></p>
<ul>
  <%=
    res = ""
    Dir.glob(skins_path+"/*").each do |file|
      skin = File.basename(file)
      res << "<li><a href=\"/skins/#{params[:author]}/#{skin}\">#{skin}</a></li>"
    end
    res
  %>
</ul>

<p><a href="/skins">&larr; back to authors</a></p>